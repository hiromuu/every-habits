{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/domain/*": [
        "src/domain/*"
      ],
      "@/application/*": [
        "src/application/*"
      ],
      "@/infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@/presentation/*": [
        "src/presentation/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
